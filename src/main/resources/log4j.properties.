# Set the root logger level to INFO (or DEBUG, WARN, etc.)
log4j.rootCategory=INFO, console

# Set Spark-related loggers to INFO
log4j.logger.org.apache.spark=INFO
log4j.logger.org.apache.hadoop=INFO
log4j.logger.org.apache.spark.sql=INFO
log4j.logger.org.apache.spark.storage=INFO
log4j.logger.org.apache.spark.executor=INFO

# Optional: Console appender settings (default behavior)
log4j.appender.console=org.apache.log4j.ConsoleAppender
log4j.appender.console.layout=org.apache.log4j.PatternLayout
log4j.appender.console.layout.ConversionPattern=%d{yyyy-MM-dd HH:mm:ss} %p %c{1}: %m%n